{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "outDir": "out-webview",
    "rootDir": "src",
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": [
    "src/webview/**/*.ts",
    "src/shared/**/*.ts",
    "src/mixer/math.ts"
  ]
}
